
<%= navigationBar(NavigationHelper::ADMIN_NFL_TEAMS_BUTTON) %>

<div class='row-fluid'><div class='span12 center'>
<h3>Manage NFL Schedule</h3>

<table class='table table-striped table-bordered table-condensed center'>
  <thead><tr>
    <th>Year</th>
    <th>Week</th>
    <th>Date</th>
    <th>Time</th>
    <th>Home nfl team</th>
    <th>Away nfl team</th>
    <th>Home score</th>
    <th>Away score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr></thead>

<% @nfl_schedules.each do |nfl_schedule| %>
  <tr>
    <td><%= nfl_schedule.year %></td>
    <td><%= nfl_schedule.week %></td>
    <td><%= nfl_schedule.start_time.time.localtime.strftime("%m/%d/%Y") %></td>
    <td><%= nfl_schedule.start_time.time.localtime.strftime("%I:%M %p") %></td>
    <td><%= nfl_schedule.home_nfl_team.abbreviation %></td>
    <td><%= nfl_schedule.away_nfl_team.abbreviation %></td>
    <td><%= nfl_schedule.home_score %></td>
    <td><%= nfl_schedule.away_score %></td>
    <td><%= link_to 'Show', nfl_schedule %></td>
    <td><%= link_to 'Edit', edit_nfl_schedule_path(nfl_schedule) %></td>
    <td><%= link_to 'Destroy', nfl_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create NFL schedule', new_nfl_schedule_path %>

<br/><br/>
</div></div>
