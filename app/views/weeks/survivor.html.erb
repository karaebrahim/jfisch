                 vertmiddle'>
      <thead><tr>
        <th>Team</th>
        <th>Bets</th>
      </tr></thead>
      <% 
        bet_count = 0
        @team_to_bet_counts_map.sort_by {|k,v| v}.reverse.each { |team_and_count| 
      %>
        <tr>
		  <td><%= @team_map[team_and_count[0]].full_name %></td>
		  <td><%= team_and_count[1].to_s %></td>
		  <% bet_count += team_and_count[1] %>
		</tr>
      <%
        }
      %>
        <tr>
          <td><strong>Total</strong></td>
          <td><strong><%= bet_count %></strong></td>
    </table>
  </div>
</div>
